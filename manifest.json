{
    "name": "3AutoChatGPT",
    "version": "1.0",
    "description": "An extension to orchestrate conversations between two tabs using ChatGPT",
    "manifest_version": 2,
    // "icons": {
    //     "16": "icons/16x16.png",
    //     "48": "icons/48x48.png",
    //     "128": "icons/128x128.png"
    // },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "ChatGPT Orchestrator"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ]
}